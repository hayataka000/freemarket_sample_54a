.sign-up-container
  = render 'sign-up-header'
  .sign-up-main
    .sign-up-main__content
      .sign-up-main__content__head 新規会員登録
      .sign-up-main__content__bottom
        .sign-up-main__content__bottom-inner
          .sign-up__btn
            = link_to 'メールアドレスで登録する', sign_up_path
          .sign-up__btn--facebook
            = link_to 'Facebookで登録する',  user_facebook_omniauth_authorize_path, method: "post"
          .sign-up__btn--google
            = link_to 'Googleで登録する',  user_google_oauth2_omniauth_authorize_path, method: "post"
  = render 'sign-up-footer'