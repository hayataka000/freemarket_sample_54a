= render 'item/header'
.container
  .profile
    .profile__head
      プロフィール

    .profile__info
      .profile__info--box
        .user-icon
        .user-name
        = form_with model: @users do |f|
          = f.text_field :name, id: "profile-name", placeholder: '名前'
          %input{name: "user-name", type: "text", id: "profile-name"}

    .profile__content
      .profile__content--box
        .textbox
        = form_with model: @users do |f|
          = f.text_area :content, class: 'item_datail', placeholder: "例）こんにちは☆ ご覧いただきありがとうございます！かわいいものやきれいめオフィスカジュアル中心に出品しています。"
        .save-btn
        = form_with model: @users do |f|
          %button{id: "profile-edit-btn"} 変更する
          = f.submit "変更する"
%main.l-container.clearfix
  .mypages-side
    = render 'mypages/mypages-side'