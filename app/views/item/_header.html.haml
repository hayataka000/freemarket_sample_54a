.container
  .header
    .inner
      .inner__top
        %img{:alt => "mercari", :height => "36", :src => "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?4104386162", :width => "134"}/
        .inner__top-form
          %input.input-default{:name => "keyword", :placeholder => "何をお探しですか？", :type => "search", :value => ""}/
          %i.icon-search
            %i.fas.fa-search
      .inner__nav__box
        .inner__nav__box-right
          .inner__nav__box-right-signup
            .signup__btn-red
              = link_to '新規会員登録', new_user_session_path

            .login__btn-blue
              = link_to 'ログイン', new_user_session_path

        .header__bottom
          .header__bottom__left
            %ul.header__bottom__left__nav   
              %li
                %h2
                  .header__bottom__left__nav__icon
                    %i.fas.fa-list-ul
                      = link_to '', 'https://www.mercari.com/jp/category/'
                      %span カテゴリーから探す
              %li
                %h2
                  .header__bottom__left__nav__icon2
                    %i.fas.fa-tags
                      = link_to '', 'https://www.mercari.com/jp/brand/'
                      %span ブランドから探す