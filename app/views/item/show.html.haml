.container
  = render 'item/header'
  %section.item-box-container
    %h1.item-name  
      = @item.name
    .item-main-content.clearfix
      .item-photo
        .owl-carousel
          .owl-stage-outer
            .owl-stage
              .owl-item
              .owl-item.active
                .owl-item-inner
                  = image_tag @item.image, size: '300×300'
          .owl-nav.disabled
            .owl-prev prev
            .owl-next next
          .owl-dots
            .owl-dot.active
              %span
              .owl-dot-inner
                = image_tag @item.image, size: '60×60'
            .owl-dot
              %span
              .owl-dot-inner
                = image_tag @item.image, size: '60×60'
      .item-price-box.text-center.visible-sp
        %span.item-price.bold ¥ 2,500
        %span.item-tax (税込)
        %span.item-shipping-fee 送料込み
      %section.visible-sp
        =link_to class: 'item-buy-btn.f18-24' do
          購入画面に進む
        .item-btn-float-area
          =link_to class: 'item-btn-client' do
            .visible 購入画面に進む
      %table.item-detail-table
        %tbody
          %tr
            %th 出品者
            %td
              =link_to do
                = @user.id
              %div
                .item-user-ratings
                  %i.icon-good
                    %span 821
                .item-user-ratings
                  %i.icon-normal
                    %span 2
                .item-user-ratings
                  %i.icon-bad
                    %span 0
          %tr
            %th カテゴリー
            %td
              =link_to do
                %div 
                  = @item.name
              =link_to do
                .item-detail-table-sub-category
                  %i.icon-arrow-right バッグ
              =link_to do
                .item-detail-table-sub-sub-category
                  %i.icon-arrow-right ショルダーバッグ
          %tr
            %th ブランド
            %td
              =link_to do
                %div コーチ,
          %tr
            %th 商品の状態
            %td
              = @item.condition
          %tr
            %th 配送料の負担
            %td
              = @item.delivery_fee
          %tr
            %th 配送の方法
            %td  
              = @item.delivery_method
          %tr
            %th 配送元地域
            %td
              = @item.shipping_area
          %tr
            %th 発送日の目安
            %td 
              = @item.delivery_date
    .item-price-box.text-center
      %span.item-price.bold 
        = @item.price 
      %span.item-tax (税込)
      %span.item-shipping-fee 送料込み
    .item-buy-btn.f18-24
      =link_to class: 'item-buy.f18-24' do
        購入画面に進む
    .item-btn-client
    .item-description.f14
      %p.item-description-inner 
        = @item.content
    .item-button-container.clearfix
      .item-button-left
        =link_to do
          .item-button.item-button-like
            %i.icon-like-border
              %span いいね!
              %span 4
        =link_to do
          .item-button.item-button-report.clearfix
            %i.icon-flag
              %span 不適切な商品の報告
      .item-button-right
        =link_to do
          .item-button.item-button-like
            %i.icon-lock
              %span あんしん・あんぜんへの取り組み
  .item-detail-message
    .message-container
  %ul.nav-item-link-prev-next.clearfix
    %li.nav-item-link-prev
